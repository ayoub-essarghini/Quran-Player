<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/custom_notification.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/small_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Title"
        android:textColor="#9FB195"
        android:layout_marginTop="8dp"
        android:textSize="10sp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginStart="10dp"
       />

    <TextView
        android:id="@+id/custom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Title"
        android:layout_below="@+id/small_title"
        android:textColor="#8F9A8B"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/body_notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="body"
        android:layout_below="@+id/custom_title"
        android:textColor="@color/main_color"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true" />


</RelativeLayout>
